{
  "name": "movies-app",
  "version": "1.0.0",
  "description": "A simple movies app.",
  "main": "server.js",
  "repository": "https://github.com/claudiorivera/",
  "author": "Claudio Rivera <me@claudiorivera.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node server",
    "client-install": "cd client && yarn",
    "client": "yarn --cwd client start",
    "server": "nodemon server --ignore client",
    "dev": "concurrently --names 'SERVER,CLIENT' -c 'bgBlue.bold,bgMagenta.bold' 'yarn run server' 'yarn run client'",
    "heroku-postbuild": "yarn run client-install && yarn --cwd client run build"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-promise-router": "^3.0.3",
    "pg": "^8.2.1"
  },
  "engines": {
    "node": "14.x"
  }
}
